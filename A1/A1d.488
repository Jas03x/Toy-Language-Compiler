{
	procedure PrintHelloWorld
	{
		"Hello World!"
		newline
	}
	
	function GetCourseName(is_full_name: boolean) : text
	{
		if is_full_name then
			return with "CSC 488S / CSC2107S Compilers and Interpreters"
		else
			return with "CSC 488"
	}
	
	procedure PrintCourseGreeting
	{
		"Welcome to "
		GetCourseName(true)
		", or "
		GetCourseName(false)
		"for short."
		newline
	}
	
	PrintHelloWorld
	PrintCourseGreeting
}
